<p><%= link_to 'Add New Comment', new_pokemon_comment_path(@pokemon)%></p>
<section class="section">
	<div class="container">
    <div class="notification is-primary">
    <h1><%=@pokemon.title%></h1>
    <h2>Comments:</h2>
</div>
<div style="width:400px; height:auto">
<% if @pokemon.image.attached?%>
<%= image_tag(@pokemon.image) %>
<% end %>
</div>
        <% @pokemon.comments.each do|comment| %>
        
   <li><%= comment.user.username%> says <%= comment.content%></li>
		<nav class="level">
   
		  <!-- Left side -->
		  <div class="level-left">
		    <p class="level-item">
		        <strong>Actions</strong>
		    </p>

		  </div>
		  <!-- Right side -->
		  <div class="level-right">
		  	<p class="level-item">
		    	<%= link_to "Edit", edit_comment_path(comment), class:"button" %>
		  	</p>
		  	<p class="level-item">
				<%= link_to "Delete", comment_path(comment), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
				</p>
		  </div>
		</nav>
		<hr/>

		
	</div>
</section>
	
<% end %>






