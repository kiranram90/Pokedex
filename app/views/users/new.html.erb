<h1>Sign Up</h1>

<%= form_for(@user, url:'/signup') do |f| %>
<fieldset>
<p>
<% if @user.errors.any? %>
<h2> Errors: </h2>
<ul>
<% @user.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
<% end %>
<%= f.label :username %>
<%= f.text_field :username, required:true %>
<br>
<br>
<%= f.label :email %>
<%= f.email_field :email, required:true %>
<br>
<br>
<%= f.label :password %>
<%= f.password_field :password, required:true %>
</p>
</fieldset>
<br>
<br>
<%= f.submit "Submit" %>

<% end %>